<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
>
    <android.support.design.widget.TextInputLayout
            android:id="@+id/original_text_input_layout"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@drawable/input_field_frame"
            android:hint="@string/original_text_hint"
            app:hintTextAppearance="@style/hintTextAppearance"
            android:layout_margin="@dimen/original_text_input_layout_margin"
            android:layout_height="match_parent"
            android:minHeight="@dimen/original_text_input_layout_min_height"
    >

        <android.support.design.widget.TextInputEditText
                android:id="@+id/original_text_input_edit_text"
                android:gravity="start"
                android:layout_margin="@dimen/original_text_input_edit_text_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="text"
        />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/translation_text_input_layout"
            android:background="@drawable/input_field_frame"
            android:gravity="end"
            android:layout_width="match_parent"
            android:hint="@string/translation_text_hint"
            app:hintTextAppearance="@style/hintTextAppearance"
            android:layout_weight="1"
            android:layout_margin="@dimen/original_text_input_layout_margin"
            android:layout_height="match_parent"
            android:minHeight="@dimen/original_text_input_layout_min_height"
    >

        <android.support.design.widget.TextInputEditText
                android:id="@+id/translation_text_input_edit_text"
                android:textIsSelectable="true"
                android:editable="false"
                android:gravity="start"
                android:layout_margin="@dimen/original_text_input_edit_text_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="text"
                tools:ignore="Deprecated"
        />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>